<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ModifierUtilisateurActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="retour"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        android:textSize="24sp"
        android:paddingBottom="5dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/exercice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modification"
                    android:textColor="#03082b"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="7dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"/>

            </RelativeLayout>




            <EditText

                android:id="@+id/edit_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_back"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:gravity="start|center_vertical"
                android:hint="Nom">

            </EditText>


            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_back"
                android:gravity="start|center_vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:hint="Email">

            </EditText>

             <EditText
                 android:id="@+id/edit_telephone"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/edittext_back"
                  android:gravity="start|center_vertical"
                  android:layout_marginTop="15dp"
                  android:padding="16dp"
                  android:hint="Telephone">

              </EditText>

            <EditText
                android:id="@+id/edit_date_naissance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_back"
                android:gravity="start|center_vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:hint="Date de naissance">


            </EditText>


            <EditText
                android:id="@+id/editTextType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_back"
                android:gravity="start|center_vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:hint="Type">


            </EditText>



            <EditText
                android:id="@+id/edit_mot_de_passe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_back"
                android:gravity="start|center_vertical"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                android:hint="mot de passe">
            </EditText>



            <Button
                android:id="@+id/bouton_enregistrer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="modifier"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                />


        </LinearLayout>

        <!--  </androidx.cardview.widget.CardView> -->
    </ScrollView>

</LinearLayout>